<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>
<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>%d{HH:mm:ss.SSS} [%-5level] [%thread] [%logger{36}] - %m%n</Pattern>
		</layout>
	</appender>

	<appender name="LOGGING_STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>%d{HH:mm:ss.SSS} [%-5level] [%thread] %m%n</Pattern>
		</layout>
	</appender>
	
	<logger name="support.aspect" level="DEBUG">
		<appender-ref ref="LOGGING_STDOUT" />
	</logger>
	
	<logger name="support.jackson" level="DEBUG" />
	
	<logger name="net.slipp" level="DEBUG" />
	
	<root level="INFO">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>